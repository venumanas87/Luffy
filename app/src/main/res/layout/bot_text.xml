<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <!--Normal USer TExt  -->
    <RelativeLayout
        android:id="@+id/userr_text_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/messagebg"
            android:id="@+id/message"
            android:backgroundTint="@color/colorBright"
            android:fontFamily="@font/questrial"
            android:textSize="15sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:text="Hello luffy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:59 am"
            android:id="@+id/timemsg"
            android:textSize="12sp"
            android:textColor="@color/dark_grey"
            android:layout_below="@id/message"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"/>

    </RelativeLayout>

    <!-- ///////////////////// -->

    <!---Normal Bot Text-->

    <RelativeLayout
        android:id="@+id/bot_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/messageB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/messagebg"
        android:backgroundTint="@color/light_grey"
        android:fontFamily="@font/questrial"
        android:textSize="15sp"
        android:text="dfl," />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:59 am"
        android:id="@+id/timemsgB"
        android:textSize="12sp"
        android:textColor="@color/dark_grey"
        android:layout_below="@id/messageB"
        android:layout_marginStart="25dp"/>
    </RelativeLayout>

    <!-- ///////////////////////////////////////// -->


    <!---            Date CARD       -->

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/dateCard"
        android:layout_margin="15dp"
        app:cardCornerRadius="20dp"
        android:visibility="gone"
        android:backgroundTint="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21:49"
                android:id="@+id/dateCard_timeTV"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/questrial"
                android:textAlignment="center"
                android:textSize="54sp"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day_date_tv"
                android:text="29 MARCH , THURSDAY"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- ///////////////////////////////////////// -->


    <!-- -->


    <!-- ///////////////////// -->



</RelativeLayout>